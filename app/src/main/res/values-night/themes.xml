<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DailyMemeDigest" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/background</item>
    </style>
    <style name="heading1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>
    <style name="subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/pt_sans</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/pt_sans</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>
    <style name="memetext" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/archivo_black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/black</item>
        <!--        <item name="android:shadowDx">1.5</item>-->
        <!--        <item name="android:shadowDy">1.5</item>-->
        <item name="android:shadowRadius">5</item>
        <!--        <item name="android:ambientShadowAlpha">1</item>-->
    </style>
    <style name="navbartext" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="primaryButton" parent="Widget.MaterialComponents.Button">
        <item name="colorButtonNormal">@color/primaryDarkColor</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="secondaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/primaryDarkColor</item>
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Theme.DailyMemeDigest.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.DailyMemeDigest.AppBarOverlay"
        parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />
    <style name="Theme.DailyMemeDigest.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>